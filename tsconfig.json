{
  "compilerOptions": {
    "baseUrl": "./src",
    "moduleResolution": "node",
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },

  "resolveJsonModule": true,

  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts",
    "src/index.ts",
    "src/**/*.json"
  ],
  "exclude": ["node_modules"]
}
